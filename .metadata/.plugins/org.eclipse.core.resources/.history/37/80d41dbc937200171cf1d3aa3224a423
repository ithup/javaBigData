package com.ithup.demo;
/**
 * interrupte中断线程
 * @author acer
 *
 */
class MyThreadInterrupt extends Thread{
	
	@Override
	public void run() {		//覆写run方法
		System.out.println("1.进入线程");
		try {
			System.out.println("休眠10秒");
			sleep(10000);			//休眠10秒
			System.out.println("2.线程进入休眠状态");
		} catch (Exception e) {
			System.out.println("3.线程休眠终止");
		}
		System.out.println("4.线程正常结束");
	}
}
public class ThreadInterrupt {
	public static void main(String[] args) {
		//实例化子类对象
		MyThreadInterrupt mti=new MyThreadInterrupt();
		//实例化线程对象
		Thread th = new Thread(mti,"线程");
		th.start();
		try {
			Thread.sleep(2000);
			System.out.println("睡眠2秒");
		} catch (Exception e) {
			e.printStackTrace();
		}
		th.interrupt(); 		//中断线程执行
	}
}
