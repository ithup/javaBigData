package com.iuthuplonl.io2;

import java.io.FileWriter;

/**
 * 应用FileWriter写文件
 * 向文件中写入数据
 * @author acer
 *
 */
public class FileWriter01 {
		public static void main(String[] args) {
			//声明对象
			FileWriter fw = null;
			try {
				fw = new FileWriter("d:\\javacode\\file\\a.txt");
				//定义一个字符串
				String str = "中国我爱你！";
				//写入文件中
				fw.write(str);
				//刷新
				fw.flush();
			} catch (Exception e) {
				e.printStackTrace();
			}
		}
}
