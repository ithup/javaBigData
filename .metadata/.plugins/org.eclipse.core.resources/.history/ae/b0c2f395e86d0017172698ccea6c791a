package day13;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.Statement;

import org.junit.Test;

/**
 * JDBC连接操作
 * @author acer
 *
 */
public class JDBCConnTest {
	public  final String DRIVER="com.mysql.jdbc.Driver";//数据库驱动
	public  final String URL="jdbc:mysql:///test";//数据库路径
	public  final String USER="root";//用户名
	public  final String PASSWORD="tiger";//密码
	public  Connection conn=null;
	public  PreparedStatement ps=null;
//	public  Statement st=null;
	public  ResultSet rs=null;
	@Test
	public  void insertUse(){
		try {
			Class.forName(DRIVER);//加载数据库驱动
			conn=DriverManager.getConnection(URL,USER,PASSWORD);//建立与数据库的连接
			String sql="insert into user_info values(?,?,?,?)";
			ps=conn.prepareStatement(sql);
			ps.setInt(1, 4);
			ps.setString(2, "周星星");
			ps.setString(3,"周星驰");
			ps.setString(4,"95721");
			int row = ps.executeUpdate();
			if(row>0){
				System.out.println("记录插入成功!");
			}else{
				System.out.println("记录插入失败！");
			}
		} catch (Exception e) {
			e.printStackTrace();
		}
	}
}
