package day14;

import java.util.HashMap;
import java.util.Iterator;
import java.util.Map;
import java.util.Map.Entry;
import java.util.Set;
import java.util.UUID;

/**
 * 通过Map,显示对应的键值信息 遍历集合信息
 * 
 * @author acer
 *
 */

public class MapTest4 {
	// 程序的入口
	public static void main(String[] args) {
		String id = UUID.randomUUID().toString();
		// 创建三个企鹅对象
		Penguin xionganqu = new Penguin("雄安区", "Q仔");
		Penguin xiqiong = new Penguin("溪琼", "Q妹");
		Penguin haha = new Penguin("haha", "Q仔");
		// 创建map集合
		Map<String, Penguin> pet = new HashMap<String, Penguin>();
		// 添加数据
		pet.put(id, xionganqu);
		pet.put(id, xiqiong);
		pet.put(id, haha);
		// 使用迭代器遍历集合数据
		Set<String> key = pet.keySet();
		Iterator<String> it = key.iterator();
		while (it.hasNext()) {
			String keyPenguin = it.next();
			Penguin penguin = pet.get(keyPenguin);
			System.out.println("编号：" + keyPenguin + "\t" + "昵称：" + penguin.getName() + "\t" + "性别：" + penguin.sex);
		}
		System.out.println("-----------------------------------");
		// 使用增强for循环遍历集合数据
		Set<String> keySet = pet.keySet();
		for (String keyPenguin : keySet) {
			Penguin penguin = pet.get(keyPenguin);
			System.out.println("编号：" + keyPenguin + "\t" + "昵称" + penguin.name + "\t" + "性别：" + penguin.sex);
		}
		System.out.println("--------------------------");
		// entrySet:返回此映射所包含的映射关系的 Set 视图
		Set<Entry<String, Penguin>> entrySet = pet.entrySet();
		for (Entry<String, Penguin> penguin : entrySet) {
			System.out.println(
					"编号：" + penguin.getKey() + "\t" + "昵称：" + penguin.getValue().name + "性别：" + penguin.getValue().sex);
		}

	}
}
