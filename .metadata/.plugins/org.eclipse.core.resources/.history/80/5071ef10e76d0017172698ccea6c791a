package day13;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.ResultSet;
import java.sql.Statement;

/**
 * JDBC连接操作
 * @author acer
 *
 */
public class JDBCConnTest {
	public static final String DRIVER="com.mysql.jdbc.Driver";//数据库驱动
	public static final String URL="jdbc:mysql:///test";//数据库路径
	public static final String USER="root";//用户名
	public static final String PASSWORD="tiger";//密码
	public static Connection conn=null;
	public static Statement st=null;
	public static ResultSet rs=null;
	public static void main(String args[]){
		try {
			Class.forName(DRIVER);//加载数据库驱动
			conn=DriverManager.getConnection(URL,USER,PASSWORD);//建立与数据库的连接
			st=conn.createStatement();
			String sql="insert into user_info values(5,'周三','周三','123')";
			//执行
			int row = st.executeUpdate(sql);
			if(row>0){
				System.out.println("记录插入成功!");
			}else{
				System.out.println("记录插入失败！");
			}
		} catch (Exception e) {
			e.printStackTrace();
		}
	}
}
